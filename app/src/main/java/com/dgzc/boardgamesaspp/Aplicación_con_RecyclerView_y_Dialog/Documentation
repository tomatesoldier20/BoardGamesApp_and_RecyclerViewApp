
/* Descrición general: Muestra el diálogo para cambiar el color de fondo de la barra vertical.
 *
 * Funcionamiento:
 *
 * @property dialogView
 * @property dialog
 * @property btnAplicar
 */

fun showColorChangeDialog() {
        val dialogView = layoutInflater.inflate(R.layout.activity_emergentview, null)

        val dialog = AlertDialog.Builder(this)
            .setView(dialogView)
            .setCancelable(true)
            .create()

        dialog.show()
        val btnAplicar = dialogView.findViewById<Button>(R.id.btnAddGame)

        btnAplicar.setOnClickListener {
            dialog.dismiss()
        }
}